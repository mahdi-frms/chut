{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chut/auth": ["packages/auth/src/index.ts"],
      "@chut/con-user": ["packages/controllers/user/src/index.ts"],
      "@chut/storage": ["packages/storage/src/index.ts"],
      "@chut/types": ["packages/types/src/index.ts"],
      "@chut/user": ["packages/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
